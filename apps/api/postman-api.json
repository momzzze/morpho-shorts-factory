{
    "info": {
        "name": "Morpho Shorts Factory",
        "_postman_id": "morpho-api-collection",
        "description": "Football highlights API - Get matches with YouTube videos and submit for AI processing",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Football",
            "item": [
                {
                    "name": "Get League Highlights",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/football/highlights?league=47&limit=100",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "football",
                                "highlights"
                            ],
                            "query": [
                                {
                                    "key": "league",
                                    "value": "47",
                                    "description": "League ID: 47=Premier League, 87=La Liga, 54=Bundesliga, 55=Serie A, 53=Ligue 1, 42=Champions League"
                                },
                                {
                                    "key": "limit",
                                    "value": "100",
                                    "description": "Max highlights to return (default: all)"
                                }
                            ]
                        },
                        "description": "Get all finished matches from a league/competition with YouTube highlight videos.\n\nReturns ALL matches from the league ranked by excitement, with YouTube video URLs for each."
                    },
                    "response": []
                },
                {
                    "name": "Submit for AI Processing",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"videoUrl\": \"https://www.youtube.com/watch?v=FAEgFRMeH_E\",\n  \"homeTeam\": \"Brentford\",\n  \"awayTeam\": \"AFC Bournemouth\",\n  \"score\": \"4-1\",\n  \"stats\": {\n    \"totalGoals\": 5,\n    \"totalShots\": 18,\n    \"shotsOnTarget\": 8,\n    \"yellowCards\": 2,\n    \"redCards\": 0,\n    \"penalties\": 0\n  },\n  \"breakdown\": {\n    \"goalScore\": 40,\n    \"actionScore\": 0,\n    \"cardScore\": 0,\n    \"socialScore\": 0,\n    \"importanceScore\": 10\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/football/process",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "football",
                                "process"
                            ]
                        },
                        "description": "Submit a highlight video to the AI service for processing.\n\nAI will extract goals, best moments, and generate short clips."
                    },
                    "response": []
                }
            ],
            "description": "Football highlights endpoints"
        },
        {
