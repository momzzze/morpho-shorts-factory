# Example environment variables for Morpho Shorts Factory
# Copy to .env and fill in your secrets

# Core API
PORT=5001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:pass@localhost:5432/morpho

# Redis Caching (Optional, recommended for production)
# Development: redis://localhost:6379
# With authentication: redis://:password@host:port
REDIS_URL=redis://localhost:6379

GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name
# GCS_CREDENTIALS_PATH=/path/to/credentials.json (optional, uses ADC if not set)

# RapidAPI - TikTok API (Optional)
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=tiktok-api23.p.rapidapi.com

# YouTube Data API v3 (Optional)
YOUTUBE_API_KEY=your-youtube-api-key

# Football/Soccer Data API (Optional)
FOOTBALL_API_KEY=your-football-api-key
